<?xml version="1.0"?>
<ruleset name="EcoRideStandard">
<!-- Configuration pour le linter PHP_CodeSniffer -->

    <!-- Guide de style de codage PHP -->
    <rule ref="PSR12">
        <!-- Exclure la règle d'identation car ca générer des erreurs  -->
        <exclude name="Generic.WhiteSpace.ScopeIndent"/>
    </rule>
    
    <!-- Dossier à analyser -->
    <file>App</file>
    <file>Public</file>
    <file>Templates</file>

    <!-- Exclure JS et CSS -->
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>
</ruleset>